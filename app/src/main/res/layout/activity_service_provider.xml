<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0096C7">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Provider"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:text="Hi, Manage Your requests and profile ?"
            android:textColor="@color/black"
            android:background="@drawable/button_round4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/btnLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_baseline_exit_to_app_24"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/btnShareLocation"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_round2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:text="Share Location"/>


    <TextView
        android:id="@+id/btnProfile"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:text="Profile"/>

    <TextView
        android:id="@+id/btnRequest"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round2"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="70dp"
        android:textSize="15sp"
        android:text="Request"/>



</LinearLayout>